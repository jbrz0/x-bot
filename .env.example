# X API Credentials (Apply for access at https://developer.twitter.com/en/portal/petition/essential/basic-info)
# Ensure the App has Read & Write permissions
X_APP_KEY=""
X_APP_SECRET=""
X_ACCESS_TOKEN=""
X_ACCESS_SECRET=""

# OpenAI API Key (Get from https://platform.openai.com/account/api-keys)
OPENAI_API_KEY=""

# AI Model Selection (Defaults to gpt-4o-mini if not set)
# Examples: gpt-4o, gpt-3.5-turbo
OPENAI_MODEL="gpt-4o-mini"

# Database URL (For local development, use SQLite)
# Example for local SQLite: "file:./dev.db"
# Example for Supabase/Postgres: "postgresql://user:password@host:port/database?sslmode=require"
SIMULATE_DATABASE_URL="file:./dev.db"
DATABASE_URL=""
DATABASE_PUBLIC_URL=""
DATABASE_SECRET_URL=""

# Logging Level (e.g., trace, debug, info, warn, error, fatal)
LOG_LEVEL="info"

# Bot Configuration
# Set to "true" to enable simulate mode (logs actions instead of posting)
SIMULATE_MODE="false" 

# --- Scheduler Configuration ---
# Optional: Cron schedule pattern for running the main bot task.
# Default is '5 */8 * * *' (Every 8 hours at 5 minutes past the hour).
# Use crontab guru to build patterns: https://crontab.guru/
CRON_SCHEDULE='5 */8 * * *'